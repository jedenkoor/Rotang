block variables

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(content="" name="description")
    meta(content="" name="keywords")
    title #{title}
    link(rel="apple-touch-icon" href="images/apple-touch-icon.png")
    link(rel="shortcut icon" href="images/apple-touch-icon.png" type="image/x-icon")

  body(style="opacity: 0")
    .wrapper
      include includes/header.pug
      main.content
        if(breadrumbs == 1)
          include includes/breadrumbs.pug
        block content
      include includes/popup-callback.pug
      include includes/popup-review.pug
      include includes/popup-addToBasket.pug
      include includes/popup-clearBasket.pug
      include includes/footer.pug